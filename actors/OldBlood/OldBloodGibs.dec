Actor OldBloodGib
{
	Radius 2
	Height 8
	Gravity 0.43
	Speed 7
	Mass 1
	BounceType "Doom"
	BounceFactor 0.45
	BounceSound "nashgore/gibbounce"
	Decal "BloodSplat"
	+MISSILE
	+FLOORCLIP
	+DONTSPLASH
	+NOTELEPORT
	+FORCEXYBILLBOARD
	+THRUACTORS

	States
	{
		Spawn:
			TNT1 A 0 NoDelay ACS_NamedExecuteWithResult("OldBloodGibInit", 0)
			TNT1 A 0 A_Jump(128, 2)
			TNT1 A 1 A_Jump(256, "Spawn2")
			TNT1 A 1 A_Jump(256, "SpawnFail")
			Wait
		Spawn2:
			TNT1 A 0 A_Jump(128, 2)
			TNT1 A 0 A_SetScale(ScaleX * -1.0, ScaleY)
			TNT1 A 1 A_Jump(256, "Spawn3")
			Wait
		Spawn4:
			"####" ABCDEFGH 4
			Loop
		Death:
			"####" "#" 0 ACS_NamedExecuteWithResult("OldBloodAddToQueue", 0)
			// The blood FX needs to be spawned higher than the floor otherwise it'll glitch the fuck out in Zandronum multiplayer
			"####" "#" 0 A_SpawnItemEx("OldBloodFX1", 0.0, 0.0, 12.0, 0.0, 0.0, 0.0, 0.0, SXF_TRANSFERTRANSLATION)
			"####" I 35
			"####" "#" 0 A_ChangeFlag("NoInteraction", 1)
			"####" "#" 0 A_ChangeFlag("MoveWithSector", 1)
			"####" "#" -1
			Stop
		SpawnFail:
			TNT1 A 1
			TNT1 A 0
			Stop
	}
}

