#library "OLDBLOOD"
#include "zcommon.acs"

#libdefine HUDMSG_TIC 1.0 / 35 + 1
#libdefine MAX_OBJECTS 1024

int queueCount = 0;
int queueTIDs[MAX_OBJECTS];

Script "OldBloodAddToQueue" (void)
{
	int tid = UniqueTID();
	Thing_ChangeTID(0, tid);

	if (queueCount < MAX_OBJECTS)
	{
		queueTIDs[queueCount] = tid;
		queueCount++;
	}
	else
	{
		Thing_Remove(queueTIDs[0]);

		for (int i = 0; i < MAX_OBJECTS - 1; i++)
		{
			queueTIDs[i] = queueTIDs[i + 1];
		}

		queueTIDs[MAX_OBJECTS - 1] = tid;
	}
}

Script "OldBloodEarlyPreviewMessage" OPEN
{
	SetFont("BigFont");
	HudMessage(s: "OldBlood EARLY PREVIEW VERSION.\n\nExpect lots of jank!"; HUDMSG_PLAIN, 777, CR_GOLD, 1.5, 0.5, 5.0);
}

